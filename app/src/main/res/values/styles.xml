<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RegEditTextStyle">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:paddingLeft">@dimen/row_padding</item>
        <item name="android:paddingRight">@dimen/row_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/reg_text_field_height</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/row_padding</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:privateImeOptions">nm</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>


</resources>
